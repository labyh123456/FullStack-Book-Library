<!-- all Books  -->
<h2 class="page-header">Search Books</h2>
<form action="/books" method="GET">
    <div class="form-row">
        <div class="form-item">
<label>Title</label>
<input type="text" name="title" value=" <%= searchOption.title %>">
</div>
</div>

<div class="form-row">
<div class="form-item">
    <label>Publish After</label>
    <% console.log(searchOption.publishAfter) %>
    <input type="date" name="publishAfter" value="<%=searchOption.publishAfter %>">
    </div>


    <div class="form-item">
        <label>Publish Before</label>
        <input type="date" name="publishBefore" value="<%=searchOption.publishBefore %>">
        </div>
        </div>

<div class="form-row form-row-end">
<button class="btn btn-primary" type="submit">Search</button>
</div>
</form> 


<div>
<% books.forEach(book => { %>
<a href="/books/<%= book.id %>">    
<img height="150px" width="100px" src=" <%= book.coverImagePath %>" >
</a>
<% }) %>
</div>