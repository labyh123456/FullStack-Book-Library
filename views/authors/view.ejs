<h2 class="page-header"> <%= author.name %> </h2>
<div class="btn-row">
<a class="btn btn-primary"  href="/authors/<%= author.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', {url: `/authors/${author.id}` }) %>
</div>
<% if(booksByAuthor.length > 0) { %>
<h2 class="page-header">  Books By Authors </h2>
    <%booksByAuthor.forEach(book => { %>
        <a href="/books/<%= book.id %>">
    <img height="150px" width="100px" src=" <%= book.coverImagePath %>" >
    </a>
    <% }) %>
 <% } %>   


